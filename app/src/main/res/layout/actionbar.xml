<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/action_bar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/actionbar_height"
    android:background="@color/primary"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/button_icon"
        style="@style/ActionBarIcon"
        android:layout_width="@dimen/actionbar_icon_dimen"
        android:layout_height="match_parent"
        android:src="@drawable/ab_menu_icon" />

    <TextView
        android:id="@+id/text_title"
        style="@style/ActionBarTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Home" />

    <ProgressBar
        android:id="@+id/progress_actionBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:indeterminate="true"
        android:indeterminateTint="@android:color/white"
        android:indeterminateTintMode="src_in"
        android:paddingBottom="@dimen/actionbar_icon_padding"
        android:paddingTop="@dimen/actionbar_icon_padding"
        android:visibility="invisible" />
</LinearLayout>